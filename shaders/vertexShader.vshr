#version 330

in vec3 position;
in vec2 uvs;

out vec2 out_uvs;

uniform mat4 transMatrix;
uniform mat4 projectMatrix;
uniform mat4 viewMatrix;
uniform float scale;

void main(void) {
    vec3 pos = position;
    pos.x *= scale;
    pos.y *= scale;
    pos.z *= scale;
    gl_Position = projectMatrix * viewMatrix * transMatrix * vec4(pos, 1.0);
    out_uvs = uvs;
}